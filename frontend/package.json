{
  "name": "hms-enterprise-frontend",
  "version": "1.0.0",
  "description": "HMS Enterprise-Grade Frontend - Unified Stack",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:frontend:comprehensive": "npm run test:frontend:visual && npm run test:frontend:responsive && npm run test:frontend:accessibility && npm run test:frontend:performance",
    "test:frontend:visual": "jest --testPathPattern=visual.design.test --detectOpenHandles --forceExit",
    "test:frontend:responsive": "jest --testPathPattern=responsive.design.test --detectOpenHandles --forceExit",
    "test:frontend:accessibility": "jest --testPathPattern=accessibility.compliance.test --detectOpenHandles --forceExit",
    "test:frontend:performance": "jest --testPathPattern=performance.optimization.test --detectOpenHandles --forceExit",
    "test:visual:regression": "jest --testPathPattern=regression.test --detectOpenHandles --forceExit",
    "test:zero-bug:validation": "npm run test:frontend:comprehensive && npm run test:e2e",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
