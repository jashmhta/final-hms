# ==================== DATABASE CONFIGURATION ====================
DB_HOST=db
DB_PORT=5432
DB_NAME=hms_enterprise
DB_USER=hms_user
DB_PASSWORD=${SECURE_DB_PASSWORD}

# ==================== DJANGO SETTINGS ====================
DJANGO_SECRET_KEY=${SECURE_DJANGO_SECRET_KEY}
DJANGO_DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# ==================== REDIS CONFIGURATION ====================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379

# ==================== JWT CONFIGURATION ====================
JWT_SECRET_KEY=${SECURE_JWT_SECRET_KEY}
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=20160

# ==================== ENCRYPTION CONFIGURATION ====================
FERNET_SECRET_KEY=${SECURE_FERNET_KEY}
ENCRYPTION_KEY=${SECURE_ENCRYPTION_KEY}

# ==================== EMAIL CONFIGURATION ====================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=${EMAIL_USER}
EMAIL_HOST_PASSWORD=${EMAIL_PASSWORD}

# ==================== API CONFIGURATION ====================
API_GATEWAY_SECRET=${SECURE_API_GATEWAY_KEY}
API_RATE_LIMIT=1000

# ==================== SECURITY CONFIGURATION ====================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_REFERRER_POLICY='strict-origin-when-cross-origin'

# ==================== MONITORING CONFIGURATION ====================
SENTRY_DSN=${SENTRY_DSN}
PROMETHEUS_METRICS=True

# ==================== BACKUP CONFIGURATION ====================
BACKUP_ENCRYPTION_KEY=${SECURE_BACKUP_KEY}
BACKUP_RETENTION_DAYS=90

# ==================== MFA CONFIGURATION ====================
MFA_SECRET_KEY=${SECURE_MFA_KEY}
MFA_ISSUER=HMS_Enterprise

# ==================== COMPLIANCE CONFIGURATION ====================
HIPAA_AUDIT_LOGGING=True
GDPR_DATA_RETENTION_DAYS=365
PCI_DSS_MODE=True

# ==================== LOGGING CONFIGURATION ====================
LOG_LEVEL=INFO
LOG_FILE=/var/log/hms/hms.log
AUDIT_LOG_FILE=/var/log/hms/audit.log