# HMS Enterprise-Grade End-to-End Testing Configuration

# Backend Configuration
BACKEND_URL=http://localhost:8000
BACKEND_API_URL=http://localhost:8000/api

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
BASE_URL=http://localhost:3000

# Database Configuration
POSTGRES_DB=hms_enterprise
POSTGRES_USER=hms_user
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Authentication Configuration
TEST_ADMIN_USERNAME=admin@hms.com
TEST_ADMIN_PASSWORD=admin123
TEST_DOCTOR_USERNAME=doctor@hms.com
TEST_DOCTOR_PASSWORD=doctor123
TEST_PATIENT_USERNAME=patient@hms.com
TEST_PATIENT_PASSWORD=patient123

# API Keys (for external integrations)
EXTERNAL_LAB_API_KEY=test_lab_key
EXTERNAL_PHARMACY_API_KEY=test_pharmacy_key
EXTERNAL_BILLING_API_KEY=test_billing_key

# Test Configuration
TEST_ENVIRONMENT=development
TEST_TIMEOUT=60000
TEST_RETRY_COUNT=3
TEST_PARALLEL_WORKERS=4

# Performance Testing
PERFORMANCE_TEST_USERS=100
PERFORMANCE_TEST_DURATION=300
PERFORMANCE_TEST_RAMP_UP=60

# Security Testing
SECURITY_TEST_SCAN_DEPTH=deep
SECURITY_TEST_INCLUDE_DEPENDENCIES=true
SECURITY_TEST_INCLUDE_SECRETS=true

# Report Configuration
REPORT_OUTPUT_DIR=./reports
REPORT_FORMAT=html,json,xml
REPORT_INCLUDE_SCREENSHOTS=true
REPORT_INCLUDE_VIDEOS=true
REPORT_INCLUDE_LOGS=true

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ACCESSIBILITY_MONITORING=true
ENABLE_SECURITY_MONITORING=true

# CI/CD Configuration
CI_MODE=false
CI_REPORT_FORMAT=junit
CI_ARTIFACTS_DIR=./artifacts